<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/calculator_main_holder"
                android:layout_width="312dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:elevation="@dimen/appbar_elevation"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <android.support.v7.widget.GridLayout
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center|top"

                        android:background="@drawable/gradient_shadow_round"
                        app:columnCount="2">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/calculator_user_photo"
                            android:elevation="@dimen/circularimageview_elevation"
                            android:padding="@dimen/default_medium_padding"
                            app:layout_columnSpan="2"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight=".3"
                            tools:src="@drawable/vd_user" />

                        <TextView
                            android:id="@+id/calculator_txtv_spent_info"
                            android:layout_width="0dp"
                            android:text="Spent: "
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorWhite"
                            android:textSize="24sp"
                            app:layout_columnWeight="1"
                            tools:text="Spent: " />

                        <TextView
                            android:id="@+id/calculator_txtv_spent"
                            android:layout_width="0dp"
                            android:text="200€ "
                            android:textAlignment="textStart"
                            android:textColor="@color/colorWhite"
                            android:textSize="24sp"
                            app:layout_columnWeight="1"
                            tools:text="200€ " />

                    </android.support.v7.widget.GridLayout>
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="368dp"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/user_list_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="LinearLayoutManager"
                    app:spanCount="2"
                    tools:listitem="@layout/fragment_user_resource" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_shadow_top" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEditTextHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/txtInfoFav"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:text="BAAAAAAAAAAAAH"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtWear"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Eviar a Android Wear"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtOther"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Otras Opciones..."
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="17sp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>