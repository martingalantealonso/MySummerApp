<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:background="@drawable/drw_pantin1"
    tools:context=".views.main.FragmentMain">

    <android.support.v7.widget.GridLayout
        android:layout_width="294dp"
        android:layout_height="148dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:columnCount="2"
        android:layout_gravity="center|top"
        android:background="@drawable/gradient_shadow">

        <TextView
            android:id="@+id/days_number"
            android:layout_width="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            app:layout_columnSpan="2"
            app:layout_gravity="center"
            app:layout_rowWeight="1"
            tools:text="22 Days" />

        <TextView
            android:id="@+id/hours_number"
            android:layout_width="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_columnSpan="2"
            app:layout_gravity="center"
            app:layout_rowWeight="1"
            tools:text="22 hours" />

        <TextView
            android:id="@+id/minutes_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            tools:text="22 minutes" />

        <TextView
            android:id="@+id/seconds_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            tools:text="22 seconds" />

    </android.support.v7.widget.GridLayout>


</FrameLayout>