<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:maxHeight="50dp"
    android:orientation="horizontal"
    android:padding="@dimen/default_small_margin"
    tools:background="@drawable/gradient_shadow">

    <ImageView
        android:id="@+id/ivItemGridImage"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight=".2"
        android:adjustViewBounds="true"
        android:maxWidth="10dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/drw_pantin1" />

    <TextView
        android:id="@+id/item_image_text_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/default_small_margin"
        android:layout_weight=".8"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        tools:text="File name: this is the name of the file" />

    <ImageView
        android:id="@+id/item_image_image_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:src="@drawable/vd_file_download"
        tools:src="@drawable/vd_file_download"
        android:visibility="invisible"/>


</LinearLayout>